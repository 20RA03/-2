<Window x:Class="Пр2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пр2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="402">
            <MenuItem Header="Меню" Height="20" Width="45" FontSize="11">
                <MenuItem Header="Заполнить массив" Click="FillArray_Click" />
                <MenuItem Header="Очистить массив" Click="ClearArray_Click"/>
                <MenuItem Header="Сохранить массив" Click="SaveArray_Click"/>
                <MenuItem Header="Открыть массив" Click="OpenArray_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click" />
            </MenuItem>
        </Menu>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="80" Margin="10,30,0,0" VerticalAlignment="Top" Width="370"/>
        <TextBox x:Name="multiplication" HorizontalAlignment="Left" Height="50" Margin="10,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <Label Content="Произведение чисел:" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="187"/>
        <Button Content="Решить" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top" Width="187" Click="Calculation_Click"/>
        <Button x:Name="Info" Content="О программе" HorizontalAlignment="Left" Margin="280,115,0,0" VerticalAlignment="Top" Width="100" Click="Info_Click"/> 
    </Grid>
</Window>
